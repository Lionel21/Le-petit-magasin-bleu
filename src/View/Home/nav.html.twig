                        <input type="search" name="search" class="search form-control" placeholder="Chercher un produit">
                        <button type="submit" class="searchButton">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="/#contact" class="btn btn-primary btn-ripple btn-lg">Contact</a>
                    </div>
                </form>
                <a href="#contact" class="btn btn-primary btn-ripple btn-lg">Contact</a>
                <a href="https://fr-fr.facebook.com/pages/category/Toy-Store/Au-Petit-Magasin-Bleu-181706491861037/" target="_blank">
