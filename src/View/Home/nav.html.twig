    <nav class="navbar navbar-expand-md navbar-dark navbar-fixed-top">
        <a class="navbar-brand" href="/">Au p'tit magasin bleu</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link {% if actualFilter.universe|lower == 'train' %}selectedUniverse{% endif %}"
                       href="/product/indexUniverse/train">Trains</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if actualFilter.universe|lower == 'maquette' %}selectedUniverse{% endif %}"
                       href="/product/indexUniverse/maquette">Maquettes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if actualFilter.universe|lower == 'jouet' %}selectedUniverse{% endif %}"
