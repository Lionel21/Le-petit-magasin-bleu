<div class="row card-deck">
    {%  for product in products %}
        <div class="card mb-3" style="max-width: 540px; max-height: 300px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src={{ '/assets/images/' ~ product.image }} class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">Catégorie<br>
                        Marque<br>
                        {{ product.price }} €</p>
                        <a href="#"><p class="card-text"><small class="text-muted">En savoir plus...</small></p></a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
