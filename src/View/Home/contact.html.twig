<section class="contactForm" id="contact">

    <form method="post" action="">
        <!-- Section: Contact v.2 -->
        <article class="my-5">

            <!-- Section heading -->
            <h1 class="h1-responsive text-center my-5">Contactez-nous</h1>
            {% if success is not null %}
                <div class="alert alert-success" role="alert">Votre message a bien été envoyé.</div>
            {% endif %}

            <!-- Grid row -->
            <div class="row form-contact">

                <!-- Grid column -->
                <div class="col-md-9 mb-md-0 mb-5">

                    <form>

                        <!-- Grid row -->
                        <div class="row">

                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <label for="contact-name" class="">Nom :</label>
                                    <input type="text" id="contact-name" name="name" class="form-control"
                                           placeholder="John Doe" value="{{ contact.name ?? '' }}">
                                    {% if errors.name is defined %}
                                        {% for error in errors.name %}
                                            {{ error }}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <!-- Grid column -->

                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <label for="contact-email" class="">Email :</label>
                                    <input type="text" id="contact-email" name="email" class="form-control"
                                           placeholder="contact@gmail.com" value="{{ contact.email ?? '' }}">
                                    {% if errors.email is defined %}
                                        {% for error in errors.email %}
                                            {{ error }}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <!-- Grid column -->

                        </div>
                        <!-- Grid row -->

                        <!-- Grid row -->
                        <div class="row">

                            <!-- Grid column -->
                            <div class="col-md-12">
                                <div class="md-form mb-0">
                                    <label for="contact-Subject" class="">Sujet :</label>
                                    <input type="text" id="contact-Subject" name="subject" class="form-control"
                                           placeholder="Objet de votre message value="{{ contact.subject ?? '' }}"">
                                    {% if errors.subject is defined %}
                                        {% for error in errors.subject %}
                                            {{ error }}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <!-- Grid column -->

                        </div>
                        <!-- Grid row -->

                        <!-- Grid row -->
                        <div class="row">

                            <!-- Grid column -->
                            <div class="col-md-12">
                                <div class="md-form">
                                    <label for="contact-message">Message :</label>
                                    <textarea id="contact-message" name="message" class="form-control md-textarea"
                                              rows="5" placeholder="Votre message..."></textarea>
                                    {% if errors.message is defined %}
                                        {% for error in errors.message %}
                                            {{ error }}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <!-- Grid column -->

                        </div>
                        <!-- Grid row -->

                    </form>

                    <div class="text-center text-md-left">
                        <button class="btn btn-primary btn-md">Envoyer :</button>
                    </div>

                </div>
                <!-- Grid column -->


            </div>
            <!-- Grid row -->

        </article>
        <!-- Section: Contact v.2 -->
    </form>
</section>
