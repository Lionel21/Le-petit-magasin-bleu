<form method="post" enctype="multipart/form-data">
    <div class="form-row">
        <input type="hidden" name="id" value="{{ product.id }}">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="name">Nom :</label>
            <input type="text" class="form-control" name="name" value="{{ data.name ?? product.name }}" >
            {% if errors.name is defined %}
                {{ errors.name }}
            {% endif %}
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="image">Image :</label>
            <input id="image" type="file" name="path" value="{{ data.image ?? product.path }}">
        {% if errors.image is defined %}
            {{ errors.image }}
        {% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="reference">Référence :</label>
            <input type="text" class="form-control" name="reference" id="reference"
                   value="{{ data.reference ?? product.reference }}"/>
            {% if errors.reference is defined %}
                {{ errors.reference }}
            {% endif %}
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="price">Prix :</label>
            <input type="number" class="form-control" name="price" id="price"
                   value="{{  data.price ?? product.price }}"/>
            {% if errors.price is defined %}
                {{ errors.price }}
            {% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="category">Catégorie :</label>
            <select name="category" class="form-control" id="category">
                {% for category in categories %}
                    <option {{ category.id == product.category_id ? 'selected' }} value="{{category.id}}">
                        {{category.name}}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="brand">Marque :</label>
            <select name="brand" class="form-control" id="brand">
                {% for brand in brands %}
                    <option {{ brand.id == product.brand_id ? 'selected' }} value="{{brand.id}}">
                        {{brand.name}}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="universe">Univers :</label>
            <select name="universe" class="form-control" id="universe">
                {% for universe in universes %}
                    <option {{ universe.id == product.universe_id ? 'selected' }}  value="{{universe.id}}">
                        {{universe.name}}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-2 col-md-offset-1">
            <label for="availability">En stock :</label>
            <input type="radio" class="form-control" name="availability" id="availability" value="1" checked>
        </div>
        <div class="form-group col-md-2">
            <label for="availability">Rupture de stock</label>
            <input type="radio" class="form-control" name="availability" id="availability" value="0">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="description">Description :</label>
            <textarea class="form-control" name="description" id="description">{{ data.description ?? product.description }}</textarea>
        </div>
        <div class="form-group col-4">
            <input type="submit" value="Valider" class="float-right btn btn-primary btn-lg validation-btn">
        </div>
    </div>
    <div class="form-row">

    </div>
</form>
