{% extends 'Home/index.html.twig' %}


{% block content %}

    <section class="contactForm">

        <form method="post">
            <!-- Section: Contact v.2 -->
            <article class="my-5">

                <!-- Section heading -->
                <h1 class="h1-responsive font-weight-bold text-center my-5">Contactez-nous</h1>
                {% if success is not null %}
                    <div class="alert alert-success" role="alert">Votre message a bien été envoyé.</div>
                {% endif %}

                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-9 mb-md-0 mb-5">

                        <form>

                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="text" id="contact-name" name="name" class="form-control" placeholder="John Doe">
                                        <label for="contact-name" class="">Nom</label>
                                        {% if errors.name is defined %}
                                            {% for error in errors.name %}
                                                {{ error }}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <!-- Grid column -->

                                <!-- Grid column -->
                                <div class="col-md-6">
                                    <div class="md-form mb-0">
                                        <input type="text" id="contact-email" name="email" class="form-control" placeholder="contact@gmail.com">
                                        <label for="contact-email" class="">Email</label>
                                        {% if errors.email is defined %}
                                            {% for error in errors.email %}
                                                {{ error }}git
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <!-- Grid column -->

                            </div>
                            <!-- Grid row -->

                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-12">
                                    <div class="md-form mb-0">
                                        <input type="text" id="contact-Subject" name="subject" class="form-control" placeholder="Objet de votre message">
                                        <label for="contact-Subject" class="">Sujet</label>
                                        {% if errors.subject is defined %}
                                            {% for error in errors.subject %}
                                                {{ error }}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <!-- Grid column -->

                            </div>
                            <!-- Grid row -->

                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-12">
                                    <div class="md-form">
                                        <textarea id="contact-message" name="message" class="form-control md-textarea" rows="5" placeholder="Votre message..."></textarea>
                                        <label for="contact-message">Message</label>
                                        {% if errors.message is defined %}
                                            {% for error in errors.message %}
                                                {{ error }}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <!-- Grid column -->

                            </div>
                            <!-- Grid row -->

                        </form>

                        <div class="text-center text-md-left">
                            <button class="btn btn-primary btn-md">Envoyer</button>
                        </div>

                    </div>
                    <!-- Grid column -->

                    <!-- Grid column -->
                    <div class="col-md-3 text-center">
                        <ul class="list-unstyled mb-0">
                            <li><i class="fa fa-map-marker fa-2x"></i>
                                <p>69 rue Faubourg Bannier, 45000 Orléans</p>
                            </li>

                            <li><i class="fa fa-phone fa-2x"></i>
                                <p>02 38 62 49 73</p>
                            </li>

                            <li><i class="fa fa-envelope fa-2x"></i>
                                <p>contact@magbleu.com</p>
                            </li>
                        </ul>
                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </article>
            <!-- Section: Contact v.2 -->
        </form>
    </section>

{% endblock %}
