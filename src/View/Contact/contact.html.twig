{% extends 'Home/index.html.twig' %}


{% block content %}

    <section class="contactForm">
        <form method="post">
            <div class="form-group">
                <label for="Name">Nom</label>
                <input type="text" class="form-control form-control-sm" id="name" name="name" placeholder="John Doe" required>
                    {% if errors.name is defined %}
                        {% for error in errors.name %}
                            {{ error }}
                        {% endfor %}
                    {% endif %}
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="contact@gmail.com" required>
                    {% if errors.email is defined %}
                        {% for error in errors.email %}
                            {{ error }}
                        {% endfor %}
                    {% endif %}
            </div>
            <div class="form-group">
                <label for="Telephone">Téléphone</label>
                <input type="tel" class="form-control form-control-sm" id="phone" name="phone" placeholder="0631******" required>
            </div>
            <div class="form-group">
                <label for="Comment">Message</label>
                <textarea name="message" class="form-control form-control-sm" rows="5" placeholder="Rédigez votre message..." required></textarea>
                {% if errors.message is defined %}
                    {% for error in errors.email %}
                        {{ error }}
                    {% endfor %}
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </section>

{% endblock %}
