<form method="post">
    <div class="form-row">
        <input type="hidden" name="id" value="{{ brand.id }}">
        <div class="form-group col-md-4 col-md-offset-1">
            <label for="name">Nom :</label>
            <input type="text" class="form-control" name="name" value="{{ data.name ?? brand.name }}" >
            {% if errors.name is defined %}
                {{ errors.name }}
            {% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-8">
            <input type="submit" value="Valider" class="float-right btn btn-primary">
        </div>
    </div>
</form>