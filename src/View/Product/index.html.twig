{% extends 'layout.html.twig' %}

{% block title %}
    Au p'tit magasin bleu
{%  endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/Product/index.css">
{% endblock %}

{% block navbar %}
    {% include 'Home/nav.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="card-deck">
            {% for product in products %}
            <a class="cardLink" href="#">
                <div class="card col-xl-3 col-lg-4 col-md-6 col-sm-12 columns">
                    <img src="{{ '/assets/' ~ product.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name|capitalize}}</h4>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.price }}</p>
                        <p class="card-text">{{ product.availabity }}</p>
                        <a href="#" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include "/Home/footer.html.twig" %}
{% endblock %}
