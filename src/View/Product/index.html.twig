{% extends 'layout.html.twig' %}

{% block title %}
    Au p'tit magasin bleu - Produits
{%  endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/Product/index.css">
{% endblock %}

{% set universe = products[0].universe_name %}
{% set urlStart = '/product/indexUniverse/' %}

{% block navbar %}
    {% include 'Home/nav.html.twig' %}
{% endblock %}

{% block content %}
    <h1 class="titleProductUniverse">Les différents produits : {{ universe }}</h1>
    <p class="avail">
        {{ countProducts }} produits disponible
    </p>

    <div class="productDisplay">

        <div class="filterMenu">
            <a href="{{ urlStart ~ actualFilter.universe }}{% if actualFilter.category is defined %}{{ '?category=' ~ actualFilter.category }}{% endif %}">
                <h2 class="filterMenuTitle">Marques :</h2>
            </a>
            <ul>
                {% for brand in brands %}
                    <a href=
                       "{{ urlStart ~ actualFilter.universe ~
                       '?brand=' ~ brand.brand_name }}{% if actualFilter.category is defined %}{{ '&category=' ~ actualFilter.category }}{% endif %}"
                       class="filterLinks"
                    >
                        <li>{{ brand.brand_name }}</li>
                    </a>
                {% endfor %}
            </ul>
            <a href="{{ urlStart ~ actualFilter.universe}}{% if actualFilter.brand  is defined %}{{ '?brand=' ~ actualFilter.brand }}{% endif %}">
                <h2 class="filterMenuTitle">Categories :</h2>
            </a>
            <ul>
                {% for category in categories %}
                    <a href=
                       "{{ urlStart ~ actualFilter.universe ~
                       '?category=' ~ category.category_name }}{% if actualFilter.brand  is defined %}{{ '&brand=' ~ actualFilter.brand }}{% endif %}"
                       class="filterLinks"
                    >
                        <li>{{ category.category_name }}</li>
                    </a>
                {% endfor %}
            </ul>

        </div>

        <div class="container-fluid">
            <div class="card-deck">
                {% for product in products %}
                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 flex-wrap">
                        <a class="cardLink" href="#">
                            <div class="card">
                                <img src="{{ '/assets/uploads/' ~ product.image }}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h4 class="card-title">{{ product.name|capitalize}}</h4>
                                    <p class="card-text">{{ product.price }} €</p>
                                    <p class="card-text">Catégorie: {{ product.category_name }}</p>
                                    <p class="card-text">Marque: {{ product.brand_name }}</p>
                                    <p class="card-text inStock">
                                        {% if product.availability == 0 %}
                                            Rupture de stock
                                        {% else %}
                                            Disponible
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <nav aria-label="Page navigation example" class="navPage">
                <ul class="pagination">
                    {% if countPages == 1 %}
                        <li class="page-item"><a class="page-link" href="./{{ universe }}">1</a></li>
                    {% elseif countPages > 1 %}
                        {%  for i in 1..countPages %}
                            <li class="page-item">
                                <a class="page-link" href=
                                "{{ urlStart ~ universe ~ '/' ~ i  ~'?brand=' ~ actualFilter.brand ~
                                '&category=' ~ actualFilter.category }}">{{ i }}
                                </a>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </nav>
        </div>

    </div>

{% endblock %}

{% block footer %}
    {% include "/Home/footer.html.twig" %}
{% endblock %}
